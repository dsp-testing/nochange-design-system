{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "tailwind-variants": ["../../node_modules/tailwind-variants"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
